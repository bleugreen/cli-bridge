{
  "name": "visualworks-mcp",
  "version": "1.0.0",
  "description": "MCP server for VisualWorks Smalltalk CliBridge",
  "type": "module",
  "main": "vw_mcp_server.js",
  "bin": {
    "visualworks-mcp": "./vw_mcp_server.js"
  },
  "scripts": {
    "start": "node vw_mcp_server.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0"
  },
  "devDependencies": {
    "vitest": "^2.0.0",
    "@vitest/coverage-v8": "^2.0.0",
    "eslint": "^9.0.0",
    "globals": "^15.0.0",
    "prettier": "^3.0.0"
  },
  "keywords": ["mcp", "visualworks", "smalltalk"],
  "license": "MIT"
}
